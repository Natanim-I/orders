<%- include("partials/head.ejs") %>
<%- include("partials/navbar.ejs") %>
<div id="home-container">
    <form action="http://localhost:3000/order/<%= deleteOrder.id %>/delete?_method=DELETE" method="POST">
        <div class="form-group">
            <label for="id">ID</label>
            <p class="form-control" id="id"><%= deleteOrder.id %></p>
        </div>
        <div class="form-group">
            <label for="fullName">Full Name</label>
            <input type="text" class="form-control" id="fullName" value="<%= deleteOrder.fullName %>" disabled>
        </div>
        <div class="form-group">
            <label for="order">Order</label>
            <input type="text" class="form-control" id="order" value="<%= deleteOrder.items %>" disabled>
        </div>
        <div class="form-group">
            <label for="price">Price</label>
            <input type="number" class="form-control" id="price" value="<%= deleteOrder.price %>" disabled>
        </div>
        <div class="form-group">
            <label for="instruction">Instruction</label>
            <input type="text" class="form-control" id="instruction" value="<%= deleteOrder.instruction %>" disabled>
        </div>
        <button type="submit" class="btn btn-danger" id="place-order">Delete Order</button>
    </form>
</div>
<%- include("partials/footer.ejs") %>
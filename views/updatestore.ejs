<%- include("partials/head.ejs") %>
<%- include("partials/navbar.ejs") %>
<div id="home-container">
    <form action="http://localhost:3000/store/<%= updateStore.id %>/edit?_method=PUT" method="POST">
        <div class="form-group">
            <label for="name">Name</label>
            <input type="text" name="name" class="form-control" id="name" required value="<%= updateStore.name %>">
        </div>
        <div class="form-group">
            <label for="location">Location</label>
            <input type="text" name="location" class="form-control" id="location" required value="<%= updateStore.location %>">
        </div>
        <div class="form-group">
            <label for="email">Email</label>
            <input type="email" name="email" class="form-control" id="email" required value="<%= updateStore.email %>">
        </div>
        <button type="submit" class="btn btn-primary" id="place-order">Update Store</button>
    </form>
</div>
<%- include("partials/footer.ejs") %>